{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["./dist", "**/*.test.ts", "./node_modules", "docs"]
}
